<div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Login</h3>
                <div id="alert" class="alert d-none" role="alert"></div>
                <form id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="position-relative">
                            <input type="password" class="form-control" id="password" name="password" autocomplete="on"
                                required>
                            <i class="fas fa-eye position-absolute end-0 mt-3 me-3" style="cursor: pointer; top: -5px"
                                onclick="togglePassword('password')"></i>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <p class="mt-3">Don't have an account? <a href="/register" class="text-decoration-none">Register</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="/src/js/login.js"></script>
<div class="d-flex align-items-center justify-content-center mt-5 mb-5" style="min-height: 80vh;">
    <div class="card p-4" style="width: 500px;">
        <h3 class="card-title text-center">Add Product</h3>
        <div id="alert" class="alert d-none" role="alert"></div>
        <form id="addProductForm" enctype="multipart/form-data">
            <div class="mb-3 d-flex justify-content-center">
                <div class="upload-placeholder">
                    <img id="productImagePreview" src="#" alt="Product Image Preview">
                    <input type="file" id="productImage" name="image" class="d-none" />
                    <label for="productImage" class="text-muted">Upload Image</label>
                </div>
            </div>
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="name" placeholder="Product Name"
                    required>
            </div>
            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input type="number" class="form-control" id="productPrice" name="price" placeholder="Input price"
                    required>
            </div>
            <div class="mb-3">
                <label for="productCategory" class="form-label">Select Category</label>
                <select id="productCategory" name="category_id" class="form-select" id="productCategory">
                </select>
            </div>
            <div class="d-flex justify-content-center">
                <a href="/dashboard" class="btn btn-outline-primary me-4">Back To Home</a>
                <button id="submitBtn" type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

<script src="/src/js/addProduct.js"></script>
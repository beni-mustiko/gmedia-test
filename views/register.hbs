<div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Register</h3>
                <div id="alert" class="alert alert-danger d-none" role="alert"></div>
                <form id="registerForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="position-relative">
                            <input type="password" class="form-control" id="password" name="password" autocomplete="on"
                                required>
                            <i class="fas fa-eye position-absolute end-0 mt-3 me-3" style="cursor: pointer; top: -5px"
                                onclick="togglePassword('password')"></i>
                        </div>
                    </div>
                    <div class="mb-3 position-relative">
                        <label for="retype-password" class="form-label">Retype password</label>
                        <div class="position-relative">
                            <input type="password" class="form-control" id="retype-password" name="retype-password"
                                autocomplete="on" required>
                            <i class="fas fa-eye position-absolute end-0 mt-3 me-3" style="cursor: pointer; top: -5px"
                                onclick="togglePassword('retype-password')"></i>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <p class="mt-3">Already have an account? <a href="/" class="text-decoration-none">Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="/src/js/register.js"></script>